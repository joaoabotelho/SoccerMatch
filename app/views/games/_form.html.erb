<%= form_for(@game, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @game.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h4>

      <ul>
      <% @game.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :day, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_select :day, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :hour, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.time_select :hour, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :team1_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :team1_id, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :team2_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :team2_id, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :team2_score, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :team2_score, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :team1_score, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :team1_score, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :winner_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :winner_id, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :tournament_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :tournament_id, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

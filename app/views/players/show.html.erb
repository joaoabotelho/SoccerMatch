<div class="page-header">
  <%= link_to players_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_player_path(@player), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show player</h1>
</div>

<dl class="dl-horizontal">
  <dt>Total goals:</dt>
  <dd><%= @player.total_goals %></dd>

  <dt>Current goals:</dt>
  <dd><%= @player.current_goals %></dd>

  <dt>Captain:</dt>
  <dd><%= @player.captain %></dd>

</dl>

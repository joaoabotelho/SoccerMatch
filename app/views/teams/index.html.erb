<%= render 'shared/navbar' %>
<div class="page-header">
  <% if current_user %>
    <%= link_to new_team_path, class: 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-plus"></span>
      New Team
    <% end %>
  <% end %>
  <h1>Listing teams</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
      <th>Name</th>
      <th>Current points</th>
      <th>Current goals</th>
      <th></th>
      <th></th>
    </tr>
    </thead>

    <tbody>
    <%= content_tag_for(:tr, @teams) do |team| %>
      <td><%= team.name %></td>
      <td><%= team.current_points %></td>
      <td><%= team.current_goals %></td>
      <td><%= link_to 'Show', team %></td>
      <% if current_user&.admin %>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% else %>
        <td></td>
      <% end %>
    <% end %>
    </tbody>
  </table>
</div>

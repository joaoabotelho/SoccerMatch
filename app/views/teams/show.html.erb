<div class="page-header">
  <%= link_to teams_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_team_path(@team), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show team</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @team.name %></dd>

  <dt>Current points:</dt>
  <dd><%= @team.current_points %></dd>

  <dt>Current goals:</dt>
  <dd><%= @team.current_goals %></dd>

</dl>
<div>
  <h1>Listing players</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Total goals</th>
            <th>Current goals</th>
            <th>Captain</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @players) do |player| %>
            <td><%= player.total_goals %></td>
            <td><%= player.current_goals %></td>
            <td><%= player.captain %></td>
            <td><%= link_to 'Show', player %></td>
        <td><%= link_to 'Edit', edit_player_path(player) %></td>
        <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>

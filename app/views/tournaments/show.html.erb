<div class="page-header">
  <%= link_to tournaments_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_tournament_path(@tournament), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show tournament</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @tournament.name %></dd>

  <dt>Started:</dt>
  <dd><%= @tournament.started %></dd>

  <dt>Start day:</dt>
  <dd><%= @tournament.start_day %></dd>

  <dt>End date:</dt>
  <dd><%= @tournament.end_date %></dd>

  <dt>Winning team:</dt>
  <dd><%= @tournament.winning_team_id %></dd>

</dl>
